<Alloy>
    <Widget id="drawer" drawerLayout="true" src="nl.fokkezb.drawer">

        <Window module="xp.ui" role="leftWindow">
            <Label onClick="toggle" window="Left">I am left, tap to close</Label>
        </Window>

        <NavigationWindow platform="ios" role="centerWindow">
            <Window>
                <LeftNavButton>
                    <Button onClick="toggle" window="Left">Left</Button>
                </LeftNavButton>
                <Label>I am center</Label>
                <RightNavButton>
                    <Button onClick="toggle" window="Left">Right</Button>
                </RightNavButton>
            </Window>
        </NavigationWindow>
        <View platform="android" role="centerWindow">
            <Label onClick="toggle" window="Right">I am center, tap to open Right</Label>
        </View>

        <Window module="xp.ui" role="rightWindow">
            <Label onClick="toggle" window="Right">I am right, tap to close</Label>
        </Window>

    </Widget>
</Alloy>